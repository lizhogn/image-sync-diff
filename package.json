{
    "name": "image-sync-diff",
    "displayName": "Image Sync Diff",
    "publisher": "lizhogn",
    "repository": "https://github.com/lizhogn/image-sync-diff",
    "description": "Synchronized image comparison with overlay support",
    "version": "0.0.4",
    "icon": "media/icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "image-sync-diff.start",
                "title": "Image Sync Diff: Start"
            },
            {
                "command": "image-sync-diff.compareImages",
                "title": "Compare Images with Sync Diff"
            },
            {
                "command": "image-sync-diff.setFirstImage",
                "title": "Set as First Image"
            },
            {
                "command": "image-sync-diff.compareWithFirst",
                "title": "Compare with First Image"
            },
            {
                "command": "image-sync-diff.clearFirstImage",
                "title": "Clear First Image"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "image-sync-diff.compareImages",
                    "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|webp|bmp|svg)$/i",
                    "group": "2_workspace"
                },
                {
                    "command": "image-sync-diff.setFirstImage",
                    "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|webp|bmp|svg)$/i",
                    "group": "2_workspace"
                },
                {
                    "command": "image-sync-diff.compareWithFirst",
                    "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|webp|bmp|svg)$/i",
                    "group": "2_workspace"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "image-sync-diff-container",
                    "title": "Image Sync Diff",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "image-sync-diff-container": [
                {
                    "type": "webview",
                    "id": "image-sync-diff-sidebar",
                    "name": "Image Sync Diff",
                    "icon": "media/icon.svg"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "18.x",
        "typescript": "^5.1.3"
    }
}